{
  "allowSyntheticDefaultImports": true,
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "lib": ["ES6", "ES2015", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ES2022", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "node20",
    "outDir": "build",
    "types": ["node"]
  },
  "exclude": ["node_modules", "build", "tsconfig.json", "scripts/", "src/tests/"]
}
